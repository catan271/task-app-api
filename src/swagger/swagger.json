    "/users": {
      "post": {
        "tags": [
          "USER"
        ],
        "summary": "Register a new user",
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "schema": {
              "type": "object",
              "required": [
                "name",
                "email",
                "password"
              ],
              "properties": {
                "name": {
                  "type": "string",
                  "example": "catan"
                },
                "email": {
                  "type": "string",
                  "example": "catan@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "Abcd1234"
                },
                "age": {
                  "type": "number",
                  "example": 20
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Register Succeeded",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object"
                },
                "token": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Register fail"
          }
        }
      }
    },
